<!-- Bootstrap Table with Header - Dark -->

<div class="card">
    <h5 class="card-header"></h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            {{#each users}}
            <tbody class="table-border-bottom-0">

                <tr>

                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td> {{#if this.status }}
                        <span class="badge bg-label-primary me-1">Active</span>
                        {{else}}
                        <span class="badge bg-label-danger me-1">Blocked</span>
                        {{/if}}
                    </td>

                    <td>
                        {{#if status}}
                         <a href="/admin/block-user/{{this._id}}"
                            onclick="return confirm('Are you sure to BLOCK  {{this.name}}?')"
                            class="btn btn-primary">Block</a>
                        {{else}}
                       
                            <a href="/admin/unblock-user/{{this._id}}"
                            onclick="return confirm('Are you sure  to UNBLOCK  {{this.name}}?')"
                            class="btn btn-danger">Unblock</a>
                        {{/if}}

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->