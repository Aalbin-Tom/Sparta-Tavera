<!-- Bootstrap Table with Header - Dark -->
<div class="card">
    <h5 class="card-header"></h5>
    <div>
         <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Product Id</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Price</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0">
                {{#each orders}}
                <tr>

                    <td> <img style="height: 75px; width:75px;" src="/productimage/{{this.images.[0]}}"> </td>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.discription}}</td>
                    <td>{{this.discountedprice}}</td>
                    <td>{{this.price}}</td>

                    
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}"
                            onclick="return confirm('Are you want to delete{{this.name}}?')"
                            class="btn btn-danger">Delete</a></td>


                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->