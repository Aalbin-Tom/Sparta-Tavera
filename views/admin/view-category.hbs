<!-- Bootstrap Table with Header - Dark -->
<div class="card">
    <h5 class="card-header"></h5>
    <div>
         <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                   
                    <th>Category</th>
                    <th>Add Offer</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0">
                {{#each category}}
                <tr>

                    <td> <img style="height:auto; width:75px;" src="/category/{{this.images.[0]}}"> </td>
                    
                    <td>{{this.categoryname}}</td>
                   
                    <td><a href="/admin/add-categoryoffer/{{this.categoryname}}" class="btn btn-primary">Add Offer</a></td>

                    
                    <td><a href="/admin/edit-category/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-category/{{this._id}}"
                            onclick="return confirm('Are you want to delete{{this.category}}?')"
                            class="btn btn-danger">Delete</a></td>


                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->