<div class="container mt-5">
    <div class="row">

        <div class="col-md-6">
            <h2 class="text-center">Edit Category</h2>
            <form action="/admin/edit-category/{{category._id}}" method="post" enctype="multipart/form-data">


                <label>Category</label>

                <input type="text" name="category" id="category" class="form-control" onkeyup="validCategory()"
                    value="{{product.category}}">
                <span id="categorys" class="text-danger"></span><br>


                <label>Image</label>
                <input type="file" name="image" class="form-control" required>
                <img src="/category/{{category._id}}.jpg" style="width: 100px; height: auto;">
                <button type="submit" onclick="return validation()" class="btn btn-success mt-4">submit</button>


            </form>
        </div>

    </div>
</div>


<script>

    var Category = document.getElementById('categorys')


    function validCategory() {
        const category = document.getElementById('category').value
        if (category == "") {
            Category.innerHTML = "enter category name "
            return false


        }
        if (!category.match(/^[a-zA-Z]*$/)) {
            Category.innerHTML = 'enter a proper category name'
            return false
        }

        Category.innerHTML = null
        return true
    }



    function validation() {
        if (!validCategory()) {
            return false
        } else if (!validCategory()) {
            return false
        } else { return true }

    }
</script>