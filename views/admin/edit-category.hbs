<div class="container mt-5">
    <div class="row">

        <div class="col-md-6">
            <h2 class="text-center">Edit Category</h2>
            <form action="/admin/edit-category/{{category._id}}" method="post" enctype="multipart/form-data">


   <div class="mt-2 mb-3">
                        <label for="largeSelect" class="form-label">Category</label>
                        <select id="largeSelect"  name="category" class="form-select form-select-lg">
                          {{#each category}}
                          <option style="color: black;" value={{this.categoryname}}>{{this.categoryname}}</option>
                        {{/each}}
                        </select>

                      </div>

                
                <button type="submit" onclick="return validation()" class="btn btn-success mt-4">submit</button>


            </form>
        </div>

    </div>
</div>


<script>

    var Category = document.getElementById('categorys')


    function validCategory() {
        const category = document.getElementById('category').value
        if (category == "") {
            Category.innerHTML = "enter category name "
            return false


        }
        if (!category.match(/^[a-zA-Z]*$/)) {
            Category.innerHTML = 'Numbers not allowed'
            return false
        }

        Category.innerHTML = null
        return true
    }



    function validation() {
        if (!validCategory()) {
            return false
        } else if (!validCategory()) {
            return false
        } else { return true }

    }
</script>