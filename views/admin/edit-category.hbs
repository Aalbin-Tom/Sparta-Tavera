<div class="container mt-5">
    <div class="row">

        <div class="col-md-6">
            <h2 class="text-center">Edit Category</h2>
            <form action="/admin/edit-category/{{category._id}}" method="post">

                {{!-- enctype="multipart/form-data" --}}
                <label>Category Name</label>
                <input type="text" name="categoryname" id="category" onkeyup="validateCategory()" value="{{category.categoryname}}" class="form-control">
                <span id="categorys" class="text-danger"></span><br>


                <button type="submit" onclick="return validation()" class="btn btn-success mt-4">submit</button>


            </form>
        </div>

    </div>
</div>


<script>

    var Category = document.getElementById('categorys')


    function validateCategory() {
        const category = document.getElementById('category').value
        if (category == "") {
            Category.innerHTML = "enter category name "
            return false


        }
        if (!category.match(/^[a-zA-Z]*$/)) {
            Category.innerHTML = 'Numbers not allowed'
            return false
        }

        Category.innerHTML = null
        return true
    }



    function validation() {
        if (!validateCategory()) {
            return false
        } else {
            return true
        }

    }
</script>