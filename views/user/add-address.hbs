                        <div class="col">
                            <div class="form-outline">
                                <input name="name" type="text" id="name" class="form-control" onkeyup="validName()">
                                <label class="form-label" for="form7Example1"> Name</label>
                                <span id="names" class="text-danger"></span>

                            </div>
                        </div>

                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input name="email" type="email" id="email" class="form-control" onkeyup="validEmail()">
                        <label class="form-label" for="form7Example5">Email</label>
                        <span id="emails" class="text-danger"></span>

                    </div>

                    <!-- address input -->
                    <div class="form-outline mb-4">
                        <input name="address" type="text" id="address" class="form-control" onkeyup="validAddress()">
                        <label class="form-label" for="form7Example4">Address</label>
                        <span id="addresss" class="text-danger"></span>

                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <input name="city" type="text" id="city" class="form-control" onkeyup="validCity()">
                            <label class="form-label" for="form7Example1">City</label>
                            <span id="citys" class="text-danger"></span>

                        </div>
                    </div>

                    <!-- Email input -->
                    <div class="col">
                        <div class="form-outline mb-4">
                            <input name="pincode" type="number" id="pincode" class="form-control"
                                onkeyup="validPincode()">
                            <label class="form-label" for="form7Example5">Pin code</label>
                            <span id="pincodes" class="text-danger"></span>
                        </div>
                    </div>
                    

                    <!-- Number input -->
                    <div class="form-outline mb-4">
                        <input name="phone" type="number" id="phone" class="form-control" onkeyup="validPhone()">
                        <label class="form-label" for="phone">Phone</label>
                        <span id="phones" class="text-danger"></span>

                    </div>

                    <!-- Message input -->
                    <button type="submit" onclick="return validation()" class="btn btn-primary btn-lg btn-block">
                        Add address
                    </button>


                </form>



            </div>

        </div>

