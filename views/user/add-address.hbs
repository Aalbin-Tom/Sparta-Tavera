            <div class="col-md-8">
                <form method="post" action="/add-address">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row mb-4">
                        {{!-- <div class="col">
                            <div class="form-outline">
                                <input name="id" type="text" id="id" class="form-control" onkeyup="validId()">
                                <label class="form-label" for="form7Example1"> ID</label>
